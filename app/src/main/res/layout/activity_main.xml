<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <!-- 固定布局 fillViewport表示子布局填充满
         该scrollview的子布局期盼是使用具体高度，尽量不用matchparent属性-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/toContact"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_call"
                android:background="@drawable/shape_app"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/toDownload"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center|center_vertical"
                android:background="@drawable/shape_app"
                android:src="@mipmap/download"
                android:onClick="onClick"/>
            <ImageButton
                android:id="@+id/toCamera"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:src="@android:drawable/ic_menu_camera"
                android:background="@drawable/shape_app"
                android:onClick="onClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/toReceive"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="我是顺风耳"
                android:layout_weight="1"
                android:background="@drawable/shape_app"
                android:onClick="onClick"/>

            <Button
                android:id="@+id/toJSMutual"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="JS交互"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@drawable/shape_app"
                android:onClick="onClick"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
