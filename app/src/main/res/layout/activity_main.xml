<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <!-- 固定布局 fillViewport表示子布局填充满-->
    　　　　 <!-- 该scrollview的子布局期盼是使用具体高度，尽量不用matchparent属性-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/toContactActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取手机联系人"
            android:background="@android:drawable/editbox_background"/>
        <Button
            android:id="@+id/toReceive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="我是顺风耳"
            android:background="@android:drawable/editbox_background"/>
        <ImageButton
            android:id="@+id/toDownload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/stat_sys_download_done"/>
        <ImageButton
            android:id="@+id/toCamera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_camera"
            android:background="@android:drawable/editbox_background"/>
    </LinearLayout>

</ScrollView>
